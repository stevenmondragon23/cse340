<div class="manag-pag">
<h1>Account Management</h1>

<div class="account-info">

  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h2>
      Welcome <%= accountData.account_firstname %> <%= accountData.account_lastname %>
    </h2>
  <% } else { %>
    <p>
      Welcome <%= accountData.account_firstname %> <%= accountData.account_lastname %>
    </p>
  <% } %>

  <p><strong>Email:</strong> <%= accountData.account_email %></p>
  <p><strong>Account Type:</strong> <%= accountData.account_type %></p>
</div>

<br>

<div class="account-links">
  <a href="/account/update">Update Account Information</a>
</div>

<br>

<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
  <div class="inventory-management">
    <h3>Inventory Management</h3>
    <a href="/inv/">Go to Inventory Management</a>
  </div>
<% } %>

</div>
