<div class="manag-pag">
<h1>Update Account</h1>

<h2>Update Account Information</h2>

<% if (typeof errors !== "undefined" && errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form class="form-inv" action="/account/update" method="POST">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

  <label for="account_firstname">First Name</label>
  <input 
    type="text" 
    id="account_firstname"
    name="account_firstname" 
    value="<%= accountData.account_firstname %>" 
    required>

  <label for="account_lastname">Last Name</label>
  <input 
    type="text" 
    id="account_lastname"
    name="account_lastname" 
    value="<%= accountData.account_lastname %>" 
    required>

  <label for="account_email">Email</label>
  <input 
    type="email" 
    id="account_email"
    name="account_email" 
    value="<%= accountData.account_email %>" 
    required>

  <button type="submit">Update Account</button>
</form>

<hr>

<h2>Change Password</h2>

<form class="form-inv" action="/account/update-password" method="POST">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

  <label for="account_password">New Password</label>
  <input 
    type="password" 
    id="account_password"
    name="account_password"
    required
    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{12,}"
    title="Must contain at least 12 characters, including uppercase, lowercase, and a number."
  >

  <button type="submit">Update Password</button>
</form>
</div>
